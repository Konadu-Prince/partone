{
  "name": "wanderlust-travel-website",
  "version": "1.0.0",
  "description": "A modern, responsive travel and tourism website built with HTML5, CSS3, and JavaScript using waterfall methodology for easy code editing",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 8080 -o index.html",
    "dev": "http-server -p 8080 -o -c-1 index.html",
    "serve": "python3 -m http.server 8080",
    "build": "npm run build:css && node build.js build",
    "build:css": "tailwindcss -i ./src/css/tailwind.css -o ./wanderlust-tailwind.css --watch",
    "build:css:prod": "tailwindcss -i ./src/css/tailwind.css -o ./wanderlust-tailwind.css --minify",
    "watch": "npm run build:css & node build.js watch",
    "clean": "node build.js clean",
    "serve-dist": "cd dist && python3 -m http.server 8080",
    "test": "echo 'No tests specified'",
    "lint": "echo 'No linting configured'"
  },
  "keywords": [
    "travel",
    "tourism",
    "website",
    "responsive",
    "html5",
    "css3",
    "javascript",
    "modern-web",
    "frontend",
    "ui-ux",
    "waterfall-methodology",
    "modular-architecture",
    "css-architecture",
    "component-based"
  ],
  "author": "Wanderlust Travel Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Konadu-Prince/wanderlust-travel-website.git"
  },
  "bugs": {
    "url": "https://github.com/Konadu-Prince/wanderlust-travel-website/issues"
  },
  "homepage": "https://konadu-prince.github.io/wanderlust-travel-website",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
